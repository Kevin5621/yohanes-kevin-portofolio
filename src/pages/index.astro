---
import "../styles/globals.css";

const siteUrl = 'https://gilabs.id';
const canonical = siteUrl;
const title = 'Gilabs.id - Premium Software Agency | Web & Mobile App Development';
const description = 'Premium Software Agency specializing in web development, mobile apps, and digital solutions. Transform your business with cutting-edge technology.';
const keywords = 'web development, mobile app development, software agency, digital solutions, UI/UX design, custom software, web design, app development Indonesia';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		
		<!-- Favicons - Multiple formats for Google Search compatibility -->
		<!-- Primary favicon for Google Search Console (must be on homepage root domain) -->
		<!-- Google requires favicon on root domain homepage - this is the homepage -->
		<link rel="icon" href="/favicon.ico" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />
		<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
		<link rel="icon" type="image/png" sizes="144x144" href="/favicon-144x144.png" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Gilabs.id" />
		<meta name="publisher" content="Gilabs.id" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonical} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="Gilabs.id" />
		<meta property="og:locale" content="en_US" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<!-- Additional SEO -->
		<meta name="language" content="English" />
		<meta name="geo.region" content="US" />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-background text-foreground font-sans antialiased overflow-hidden">
		<div id="splash-screen" class="fixed inset-0 z-50 flex items-center justify-center bg-background">
			<div class="text-center">
				<!-- Logo/Brand Animation -->
				<div id="logo-container" class="mb-8">
					<h1 class="text-5xl md:text-7xl font-bold tracking-tighter">
						GILABS<span class="text-brand">.ID</span>
					</h1>
				</div>
				
				<!-- Loading Animation -->
				<div id="loading-container" class="mt-8">
					<div class="flex justify-center items-center gap-2">
						<div class="loading-dot"></div>
						<div class="loading-dot"></div>
						<div class="loading-dot"></div>
					</div>
				</div>
			</div>
		</div>

		<script>
			// Auto redirect after animation
			setTimeout(() => {
				window.location.href = '/en';
			}, 1500); // 1.5 seconds for smooth transition
		</script>
	</body>
</html>

<style>
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	#splash-screen {
		animation: fadeOut 0.5s ease-out 1s forwards;
	}

	#logo-container {
		animation: fadeInUp 0.8s ease-out forwards;
		opacity: 0;
	}

	#loading-container {
		animation: fadeIn 0.5s ease-out 0.5s forwards;
		opacity: 0;
	}

	.loading-dot {
		width: 12px;
		height: 12px;
		border-radius: 50%;
		background-color: hsl(var(--brand));
		animation: bounce 1.4s infinite ease-in-out;
	}

	.loading-dot:nth-child(1) {
		animation-delay: -0.32s;
	}

	.loading-dot:nth-child(2) {
		animation-delay: -0.16s;
	}

	.loading-dot:nth-child(3) {
		animation-delay: 0s;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeOut {
		from {
			opacity: 1;
		}
		to {
			opacity: 0;
		}
	}

	@keyframes bounce {
		0%, 80%, 100% {
			transform: scale(0);
			opacity: 0.5;
		}
		40% {
			transform: scale(1);
			opacity: 1;
		}
	}

	/* Smooth transition for redirect */
	@media (prefers-reduced-motion: no-preference) {
		#splash-screen {
			transition: opacity 0.5s ease-out;
		}
	}
</style>
