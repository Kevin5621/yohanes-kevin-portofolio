---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import ServicesHero from '../../components/services/ServicesHero.astro';
import ServicesGrid from '../../components/services/ServicesGrid.astro';
import ServicesPackages from '../../components/services/ServicesPackages.astro';
import ServicesErpCrm from '../../components/services/ServicesErpCrm.astro';
import ServicesAiAddons from '../../components/services/ServicesAiAddons.astro';
import ServicesCta from '../../components/services/ServicesCta.astro';

export function getStaticPaths() {
  return [
    { params: { locale: 'en' } },
    { params: { locale: 'id' } },
  ];
}

const { locale } = Astro.params;
const lang = locale as 'en' | 'id';

const siteUrl = 'https://gilabs.id';
const canonical = locale === 'en' ? `${siteUrl}/en/services` : `${siteUrl}/${locale}/services`;
const pageTitle = locale === 'en'
  ? `Our Services - Web, Mobile, UI/UX, ERP & CRM | Gilabs.id`
  : `Layanan Kami - Web, Mobile, UI/UX, ERP & CRM | Gilabs.id`;
const pageDescription = locale === 'id'
  ? 'Layanan lengkap pengembangan web, aplikasi mobile, desain UI/UX, sistem integrasi, ERP, CRM, dan maintenance. Solusi digital untuk bisnis Anda.'
  : 'Complete services for web development, mobile apps, UI/UX design, system integration, ERP, CRM, and maintenance. Digital solutions for your business.';
---

<Layout 
  lang={lang} 
  title={pageTitle}
  description={pageDescription}
  canonical={canonical}
  keywords={locale === 'id' 
    ? 'layanan pengembangan web, layanan aplikasi mobile, layanan desain UI/UX, layanan sistem integrasi, layanan ERP, layanan CRM, maintenance website'
    : 'web development services, mobile app services, UI/UX design services, system integration services, ERP services, CRM services, website maintenance'}
>
  <Navbar lang={lang} />
  
  <main class="min-h-screen bg-background">
    <ServicesHero lang={lang} />
    <ServicesGrid lang={lang} />
    <ServicesPackages lang={lang} />
    <ServicesErpCrm lang={lang} />
    <ServicesAiAddons lang={lang} />
    <ServicesCta lang={lang} />
  </main>
  
  <Footer lang={lang} />
</Layout>
