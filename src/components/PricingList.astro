---
import { pricingData } from '../data/pricing';
import { Check } from 'lucide-react';
import { getWhatsAppLink } from '../lib/utils';

const { lang } = Astro.props;
const t = pricingData[lang];
const customSoftware = t.customSoftware;

const icons = ['üíª', 'üì±', 'üè¢'];
---

<section id="pricing" class="py-8 sm:py-12 md:py-16 lg:py-20 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-8 sm:mb-12 md:mb-16">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4 leading-tight">
        {lang === 'en' ? 'Custom Software Solutions' : 'Solusi Software Custom'}
      </h2>
      <p class="text-sm sm:text-base text-muted-foreground max-w-2xl mx-auto px-4">
        {lang === 'en' 
          ? 'Tailored software built specifically for your business. From web apps to mobile, we build what you need.' 
          : 'Software yang dibuat khusus untuk bisnis Anda. Dari aplikasi web hingga mobile, kami membangun apa yang Anda butuhkan.'}
      </p>
    </div>

    {customSoftware && (
      <>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8 max-w-7xl mx-auto mb-12">
          {customSoftware.packages.map((pkg, index) => (
            <div class={`relative flex flex-col p-4 sm:p-6 md:p-8 rounded-2xl border transition-all duration-300 ${index === 1 ? 'border-brand shadow-2xl shadow-brand/10 sm:scale-105 z-10 bg-background/60 backdrop-blur-md' : 'border-border/50 bg-background/40 backdrop-blur-sm hover:border-brand/50'}`}>
              {index === 1 && (
                <div class="absolute -top-3 sm:-top-4 left-1/2 -translate-x-1/2 px-3 sm:px-4 py-0.5 sm:py-1 bg-brand text-white text-[0.65rem] sm:text-xs font-bold uppercase tracking-wider rounded-full shadow-lg shadow-brand/20">
                  {lang === 'en' ? 'Most Popular' : 'Paling Populer'}
                </div>
              )}
              
              <div class="mb-4 sm:mb-6 md:mb-8">
                <div class="flex items-center gap-3 mb-3">
                  <div class={`p-2 rounded-lg text-2xl ${index === 1 ? 'bg-brand/20' : 'bg-secondary'}`}>
                    {icons[index] || icons[0]}
                  </div>
                  <h3 class="text-lg sm:text-xl font-bold">{pkg.name}</h3>
                </div>
                <p class="text-xs sm:text-sm text-muted-foreground mb-3 min-h-[3rem]">{pkg.description}</p>
                <div class="text-xl sm:text-2xl font-bold text-foreground mb-2">{pkg.price}</div>
                <p class="text-[0.65rem] sm:text-xs text-muted-foreground italic">{pkg.bestFor}</p>
              </div>

              <div class="space-y-4 sm:space-y-6 mb-4 sm:mb-6 md:mb-8 flex-1">
                <div>
                  <div class="text-[0.65rem] sm:text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-2 sm:mb-3">
                    {lang === 'en' ? 'Includes' : 'Termasuk'}
                  </div>
                  <ul class="space-y-2 sm:space-y-3">
                    {pkg.features.map(feature => (
                      <li class="flex items-start gap-2 sm:gap-3 text-xs sm:text-sm">
                        <Check className={`w-4 h-4 sm:w-5 sm:h-5 shrink-0 mt-0.5 ${index === 1 ? 'text-brand' : 'text-muted-foreground'}`} />
                        <span>{feature}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                {pkg.revisions && (
                  <div>
                    <div class="text-[0.65rem] sm:text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-2 sm:mb-3">
                      {lang === 'en' ? 'Revisions' : 'Revisi'}
                    </div>
                    <ul class="space-y-2 sm:space-y-3">
                      {pkg.revisions.map(rev => (
                        <li class="flex items-start gap-2 sm:gap-3 text-xs sm:text-sm text-muted-foreground">
                          <span class={`w-1.5 h-1.5 rounded-full mt-2 shrink-0 ${index === 1 ? 'bg-brand' : 'bg-muted-foreground'}`}></span>
                          <span>{rev}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>

              <a href={getWhatsAppLink('pricing', lang, pkg.name)} target="_blank" rel="noopener noreferrer" class={`w-full py-2.5 sm:py-3 px-4 sm:px-6 rounded-xl font-bold text-sm sm:text-base text-center transition-all duration-200 ${index === 1 ? 'bg-brand text-white hover:bg-brand/90 shadow-lg shadow-brand/20' : 'bg-secondary/50 text-foreground hover:bg-secondary hover:text-brand'}`}>
                {lang === 'en' ? 'Get Started' : 'Mulai'}
              </a>
            </div>
          );
          })}
        </div>

        {/* Recurring Revenue Highlight */}
        {t.recurringRevenue && (
          <div class="max-w-4xl mx-auto mb-12">
            <div class="bg-gradient-to-br from-primary/10 via-primary/5 to-transparent border border-primary/20 rounded-2xl p-6 sm:p-8">
              <div class="text-center mb-6">
                <h3 class="text-xl sm:text-2xl font-bold mb-2">
                  {lang === 'en' ? 'üíé Recurring Revenue Plans' : 'üíé Paket Revenue Berulang'}
                </h3>
                <p class="text-sm text-muted-foreground">
                  {lang === 'en' 
                    ? 'Build stable monthly revenue with maintenance & licensing packages' 
                    : 'Bangun revenue bulanan yang stabil dengan paket maintenance & licensing'}
                </p>
              </div>
              
              <div class="grid sm:grid-cols-2 gap-4 mb-6">
                <div class="bg-background/60 backdrop-blur-sm border border-border/50 rounded-xl p-4">
                  <h4 class="font-bold text-sm mb-2">{t.recurringRevenue.maintenance.title}</h4>
                  <p class="text-xs text-muted-foreground mb-3">{t.recurringRevenue.maintenance.description}</p>
                  <p class="text-lg font-bold mb-1">
                    {t.recurringRevenue.maintenance.packages[1]?.price || 'Rp 5.000.000/bulan'}
                  </p>
                  <p class="text-xs text-muted-foreground">Starting from</p>
                </div>
                <div class="bg-background/60 backdrop-blur-sm border border-border/50 rounded-xl p-4">
                  <h4 class="font-bold text-sm mb-2">{t.recurringRevenue.licensing.title}</h4>
                  <p class="text-xs text-muted-foreground mb-3">{t.recurringRevenue.licensing.description}</p>
                  <p class="text-lg font-bold mb-1">
                    {t.recurringRevenue.licensing.packages[0]?.monthlyPrice || 'Rp 3.000.000/bulan'}
                  </p>
                  <p class="text-xs text-muted-foreground">Monthly license</p>
                </div>
              </div>
              
              <div class="text-center">
                <a 
                  href={lang === 'en' ? '/en/pricing' : '/id/pricing'} 
                  class="inline-block px-6 py-2.5 bg-primary text-primary-foreground rounded-full font-medium text-sm hover:bg-primary/90 transition-colors"
                >
                  {lang === 'en' ? 'View Recurring Plans ‚Üí' : 'Lihat Paket Berulang ‚Üí'}
                </a>
              </div>
            </div>
          </div>
        )}
      </>
    )}

    {/* Link to full pricing page */}
    <div class="text-center mt-8">
      <a 
        href={lang === 'en' ? '/en/pricing' : '/id/pricing'} 
        class="text-sm text-muted-foreground hover:text-foreground transition-colors underline"
      >
        {lang === 'en' ? 'View all pricing options ‚Üí' : 'Lihat semua opsi harga ‚Üí'}
      </a>
    </div>
  </div>
</section>
