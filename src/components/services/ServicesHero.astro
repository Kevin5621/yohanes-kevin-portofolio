---
const { lang } = Astro.props;

const content = {
  id: {
    eyebrow: "Layanan Kami",
    title: "Kami Membangun Software yang Membantu Bisnis Anda Tumbuh",
    subtitle: "Dari ide sederhana hingga sistem enterprise yang kompleks.",
    description: "Kami tidak hanya coding — kami memahami bisnis Anda dan membangun solusi yang benar-benar bekerja."
  },
  en: {
    eyebrow: "Our Services",
    title: "We Build Software That Helps Your Business Grow",
    subtitle: "From simple ideas to complex enterprise systems.",
    description: "We don't just code — we understand your business and build solutions that actually work."
  }
};

const t = content[lang as keyof typeof content];
---

<section class="relative min-h-[85vh] flex items-center justify-center overflow-hidden">
  <!-- Subtle gradient background -->
  <div class="absolute inset-0 bg-linear-to-b from-background via-background to-muted/20"></div>
  
  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(to right, hsl(var(--foreground)) 1px, transparent 1px), linear-gradient(to bottom, hsl(var(--foreground)) 1px, transparent 1px); background-size: 80px 80px;"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Eyebrow -->
      <div class="mb-8 animate-fade-in">
        <span class="inline-block px-4 py-2 text-xs font-medium uppercase tracking-[0.2em] text-muted-foreground border border-border/50 rounded-full">
          {t.eyebrow}
        </span>
      </div>

      <!-- Main Title -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tighter text-foreground mb-8 animate-slide-up leading-[1.05]" style="animation-delay: 0.1s;">
        {t.title}
      </h1>

      <!-- Subtitle & Description -->
      <div class="max-w-2xl mx-auto animate-slide-up" style="animation-delay: 0.2s;">
        <p class="text-xl md:text-2xl lg:text-3xl text-foreground/90 font-light mb-6 leading-relaxed">
          {t.subtitle}
        </p>
        <p class="text-base md:text-lg text-muted-foreground leading-relaxed">
          {t.description}
        </p>
      </div>
    </div>
  </div>

  <!-- Decorative side elements -->
  <div class="absolute left-8 top-1/2 -translate-y-1/2 hidden lg:flex flex-col gap-4 text-xs text-muted-foreground/50 tracking-widest" style="writing-mode: vertical-rl; text-orientation: mixed;">
    <span>GILABS STUDIO</span>
    <span class="w-px h-16 bg-border/50"></span>
    <span>© 2025</span>
  </div>
</section>
