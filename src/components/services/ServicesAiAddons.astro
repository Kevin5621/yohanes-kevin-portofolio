---
import { smartAutomationEN } from '../../data/smart-automation.en';
import { smartAutomationID } from '../../data/smart-automation.id';

const { lang } = Astro.props;

const content = lang === 'id' ? smartAutomationID : smartAutomationEN;
---

<section id="smart-automation" class="py-24 md:py-32 bg-background">
  <div class="container mx-auto px-4">
    <!-- Eyebrow + Headline -->
    <div class="max-w-4xl mx-auto text-center mb-16">
      <p class="text-xs font-medium uppercase tracking-widest text-muted-foreground mb-4">
        {content.eyebrow}
      </p>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight text-foreground mb-6">
        {content.headline}
      </h2>
      <p class="text-lg text-muted-foreground leading-relaxed max-w-3xl mx-auto">
        {content.narrative}
      </p>
    </div>

    <!-- Impact Stats Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {content.impacts.map((impact) => (
        <div class="p-6 rounded-2xl border border-border bg-background hover:border-primary/50 transition-all duration-300 text-center">
          <p class="text-4xl md:text-5xl font-bold text-primary mb-2">{impact.stat}</p>
          <p class="text-sm font-medium text-foreground mb-2">{impact.label}</p>
          <p class="text-xs text-muted-foreground">{impact.description}</p>
        </div>
      ))}
    </div>

    <!-- Use Cases -->
    <div class="max-w-4xl mx-auto mb-16">
      <h3 class="text-xl font-bold text-center mb-8">{content.useCases.title}</h3>
      <div class="flex flex-wrap justify-center gap-3">
        {content.useCases.items.map((item) => (
          <span class="px-4 py-2 rounded-full bg-secondary text-sm text-foreground/80 hover:bg-secondary/80 transition-colors">
            {item}
          </span>
        ))}
      </div>
    </div>

    <!-- Pricing Note + CTA -->
    <div class="max-w-2xl mx-auto text-center">
      <p class="text-sm text-muted-foreground mb-6">{content.pricingNote}</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href={`https://wa.me/6281234567890?text=${encodeURIComponent(lang === 'id' ? 'Halo, saya tertarik dengan Smart Automation' : 'Hello, I am interested in Smart Automation')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="px-8 py-4 rounded-full font-medium bg-primary text-primary-foreground hover:bg-primary/90 transition-colors duration-300"
        >
          {content.cta.primary}
        </a>
      </div>
      <p class="text-xs text-muted-foreground mt-4">{content.cta.secondary}</p>
    </div>
  </div>
</section>
