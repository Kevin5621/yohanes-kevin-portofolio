---
import { pricingData } from '../data/pricing';
import { Database, BarChart3, Layers, Settings } from 'lucide-react';

const { lang } = Astro.props;
const t = pricingData[lang].erpCrm;
---

<section id="erp" class="py-8 sm:py-12 md:py-16 lg:py-20 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-8 sm:mb-12 md:mb-16">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4 leading-tight">{t.title}</h2>
      <p class="text-sm sm:text-base text-muted-foreground max-w-2xl mx-auto px-4">{t.description}</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 md:gap-10 lg:gap-12 max-w-6xl mx-auto">
      {/* CRM Section */}
      <div class="space-y-6 sm:space-y-8">
        <div class="bg-background/40 backdrop-blur-sm border border-border/50 rounded-2xl sm:rounded-3xl p-6 sm:p-8 h-full hover:border-brand/50 transition-colors duration-300">
          <div class="flex items-center gap-3 sm:gap-4 mb-4 sm:mb-6">
            <div class="p-2 sm:p-3 bg-brand/10 rounded-xl">
              <BarChart3 className="w-6 h-6 sm:w-8 sm:h-8 text-brand" />
            </div>
            <div>
              <h3 class="text-xl sm:text-2xl font-bold">{t.crm.title}</h3>
              <p class="text-xs sm:text-sm text-muted-foreground">{t.crm.description}</p>
            </div>
          </div>

          <div class="space-y-4 sm:space-y-6">
            {t.crm.packages.map((pkg) => (
              <div class="bg-white/5 rounded-xl p-4 sm:p-6 border border-white/10 hover:bg-white/10 transition-colors">
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-2 sm:gap-0 mb-3 sm:mb-4">
                  <h3 class="font-bold text-base sm:text-lg">{pkg.name}</h3>
                  <span class="text-xs sm:text-sm font-bold bg-secondary/50 px-2 sm:px-3 py-1 rounded-full border border-border/50 shadow-sm self-start sm:self-auto">
                    {pkg.price}
                  </span>
                </div>
                <ul class="space-y-2 mb-3 sm:mb-4">
                  {pkg.features.map(feature => (
                    <li class="flex items-center gap-2 text-xs sm:text-sm text-muted-foreground">
                      <div class="w-1.5 h-1.5 rounded-full bg-brand shrink-0"></div>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
                {pkg.revisions && (
                  <div class="text-xs text-muted-foreground pt-3 border-t border-border/50">
                    <span class="font-medium">Revisions:</span> {pkg.revisions.join(', ')}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>

      {/* ERP Section */}
      <div class="space-y-6 sm:space-y-8">
        <div class="bg-primary text-primary-foreground rounded-2xl sm:rounded-3xl p-6 sm:p-8 h-full relative overflow-hidden shadow-2xl shadow-brand/20">
          <div class="absolute top-0 right-0 p-16 sm:p-24 md:p-32 bg-brand/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
          
          <div class="relative z-10">
            <div class="flex items-center gap-3 sm:gap-4 mb-4 sm:mb-6">
              <div class="p-2 sm:p-3 bg-white/10 rounded-xl backdrop-blur-sm">
                <Layers className="w-6 h-6 sm:w-8 sm:h-8 text-white" />
              </div>
              <div>
                <h3 class="text-xl sm:text-2xl font-bold">{t.erp.title}</h3>
                <p class="text-xs sm:text-sm text-primary-foreground/80">{t.erp.description}</p>
              </div>
            </div>

            <div class="space-y-3 sm:space-y-4 mb-6 sm:mb-8">
              {t.erp.modules.map(module => (
                <div class="flex items-center gap-2 sm:gap-3 text-xs sm:text-sm bg-white/5 p-2 sm:p-3 rounded-lg border border-white/10 backdrop-blur-sm hover:bg-white/10 transition-colors">
                  <Settings className="w-3 h-3 sm:w-4 sm:h-4 shrink-0 opacity-70" />
                  <span>{module}</span>
                </div>
              ))}
            </div>

            <div class="bg-white/10 rounded-xl p-4 sm:p-6 border border-white/10 backdrop-blur-md mb-4 sm:mb-6">
              <h3 class="font-bold mb-2 text-sm sm:text-base">Full Package</h3>
              <p class="text-xl sm:text-2xl font-bold">{t.erp.fullPackage.split(': ')[1]}</p>
            </div>

            <div class="space-y-2">
              {t.erp.revisions.map(rev => (
                <p class="text-xs text-primary-foreground/60 flex items-center gap-2">
                  <span class="w-1 h-1 bg-white rounded-full shrink-0"></span>
                  <span>{rev}</span>
                </p>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
