---
import { getWhatsAppLink } from '../../lib/utils';

const { lang } = Astro.props;

const pageData = {
  en: {
    title: 'Ready to start your project?',
    subtitle: 'Let\'s discuss how we can help bring your ideas to life.',
    button: 'Start a Project',
  },
  id: {
    title: 'Siap memulai proyek Anda?',
    subtitle: 'Mari diskusikan bagaimana kami dapat membantu mewujudkan ide Anda.',
    button: 'Mulai Proyek',
  },
};

const content = pageData[lang as keyof typeof pageData] || pageData.en;
---

<section class="py-16 md:py-24 relative border-t border-border/30">
  <div class="container mx-auto px-4">
    <div class="text-center max-w-xl mx-auto">
      <h3 class="text-2xl md:text-3xl font-bold mb-4">
        {content.title}
      </h3>
      <p class="text-muted-foreground mb-8 leading-relaxed">
        {content.subtitle}
      </p>
      <div class="flex justify-center">
        <a 
          href={getWhatsAppLink('footer', lang as 'en' | 'id')}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center px-8 py-4 text-base font-bold text-white transition-all duration-200 bg-brand rounded-full hover:bg-brand/90 hover:shadow-lg hover:shadow-brand/20"
        >
          {content.button}
        </a>
      </div>
    </div>
  </div>
</section>

