---
import { pricingData } from '../data/pricing';
import { LottieIcon } from '../components/ui/LottieIcon';

const { lang } = Astro.props;
// @ts-ignore - features exists in PricingData interface
const features = pricingData[lang].features;

const iconPaths = [
  '/icon/strategic-consulting.gif',
  '/icon/enterprise-development.gif',
  '/icon/discuss.gif',
  '/icon/award.gif',
];
---

<section class="py-8 sm:py-12 md:py-20 lg:py-32 relative border-b border-border/50">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-8 sm:mb-12 md:mb-16">
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold tracking-tight text-foreground mb-4 sm:mb-6 leading-tight">
        {lang === 'en' ? 'Why Choose Us' : 'Mengapa Pilih Kami'}
      </h2>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 md:gap-8">
      {features.items.map((feature: { title: string; description: string }, index: number) => {
        const iconPath = iconPaths[index];
        return (
          <div class="bg-background/40 backdrop-blur-sm border border-border/50 rounded-2xl p-6 sm:p-8 hover:border-brand/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 flex flex-col h-full">
            <div class="mb-4 sm:mb-6 flex items-center justify-start">
              <LottieIcon 
                src={iconPath} 
                className="w-16 h-16 sm:w-20 sm:h-20"
                client:only="react"
              />
            </div>
            <h3 class="text-lg sm:text-xl md:text-2xl font-bold mb-3 sm:mb-4 text-foreground leading-tight">
              {feature.title}
            </h3>
            <p class="text-muted-foreground text-sm sm:text-base leading-relaxed flex-grow">
              {feature.description}
            </p>
          </div>
        );
      })}
    </div>
  </div>
</section>

